[MASTER]
# Add c-extension based modules to this list if they are not
# recognized by pylint.
extension-pkg-whitelist=faiss_cpu

[MESSAGES CONTROL]
# Disable the following messages globally:
# C0114: Missing module docstring
# C0115: Missing class docstring
# C0116: Missing function or method docstring
# C0301: Line too long
# W0611: Unused import
# W0511: Fixme comment (TODO/FIXME)
# E0401: Unable to import (если проблема с импортами)
# E1120: No value for argument 'x' in method call (ложное срабатывание для faiss.Index.search)
# C0303: Trailing whitespace
# C0304: Final newline missing
# W0718: Catching too general exception (Exception)
# W1203: Use lazy % formatting in logging functions
# R0903: Too few public methods
# R0914: Too many local variables
# R1705: Unnecessary "else" after "return"
# R0913: Too many arguments
# R0917: Too many positional arguments
# R0912: Too many branches
# R0915: Too many statements
# R1702: Too many nested blocks
# C0411: Wrong import order (standard before third-party)
# C0413: Wrong import position (imports not at top of module)
# W0612: Unused variable
# W1514: Using open without explicitly specifying an encoding
# W0640: Cell variable defined in loop
# W1508: os.getenv default type is builtins.int
# W3101: Missing timeout argument for requests.post

disable=C0114,C0115,C0116,C0301,W0611,W0511,E0401,E1120,C0303,C0304,W0718,W1203,R0903,R0914,R1705,R0913,R0917,R0912,R0915,R1702,C0411,C0413,W0612,W1514,W0640,W1508,W3101,C0415,C0103,W0622

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120