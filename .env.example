# AI Email Support System Configuration

# ===== Gmail API =====
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.pickle
GMAIL_CHECK_INTERVAL=60  # seconds

# ===== Redis =====
REDIS_URL=redis://localhost:6379

# ===== Ollama =====
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gemma:7b

# ===== LLM Settings =====
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TOP_K=3  # RAG results

# ===== Worker =====
MAX_WORKERS=2
BATCH_SIZE=10

# ===== Logging =====
LOG_LEVEL=INFO

# ===== Security =====
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=10

# ===== Cache =====
CACHE_TTL=3600  # seconds (1 hour)

# ===== Secrets Provider (local, aws, gcp) =====
SECRETS_PROVIDER=local
